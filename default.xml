<?xml version="1.0" encoding="UTF-8"?>
<manifest>
    <!-- defaults for entries that haven't specified all required fields-->
    <default revision="dev" />

    <!-- remotes -->
    <remote name="github" fetch="ssh://git@github.com/" />
    <remote name="yocto" fetch="git://git.yoctoproject.org" />
    <remote name="oe" fetch="git://git.openembedded.org" />
    <remote name="linaro" fetch="http://git.linaro.org" />

    <!-- build scripts -->
    <project name="armpelionedge/build-pelion-os-edge"
        path="build-env"
        remote="github" />

    <!-- yocto core -->
    <project name="poky"
        path="poky"
        revision="thud"
        remote="yocto" />

    <project name="armPelionEdge/openembedded-core-mbl"
        path="poky/openembedded-core-mbl"
        revision="verified-boot"
        remote="github" />

    <project name="meta-openembedded"
        path="poky/meta-openembedded"
        revision="thud"
        remote="oe" />

    <project name="meta-virtualization"
        path="poky/meta-virtualization"
        revision="thud"
        remote="yocto" />

    <project name="meta-security"
        path="poky/meta-security"
        revision="thud"
        remote="yocto" />

    <!-- bsps -->
    <project name="meta-raspberrypi"
        path="poky/meta-raspberrypi"
        revision="thud"
        remote="yocto" />

    <project name="armPelionEdge/meta-raspberrypi-mbl"
        path="poky/meta-raspberrypi-mbl"
        revision="verified-boot"
        remote="github" />

    <project name="armPelionEdge/meta-mbl-bsp-common"
        path="poky/meta-mbl-bsp-common"
        revision="verified-boot"
        remote="github" />

    <!-- distros -->

    <!-- software -->
    <project name="armpelionedge/meta-pelion-os-edge"
        path="poky/meta-pelion-os-edge"
        remote="github" />

    <project name="openembedded/meta-linaro"
        path="poky/meta-linaro"
        remote="linaro"
        revision="thud" />

    <project name="armPelionEdge/meta-linaro-mbl"
        path="poky/meta-linaro-mbl"
        remote="github"
        revision="verified-boot" />

    <project name="aaronovz1/meta-nodejs"
        path="poky/meta-nodejs"
        revision="pyro"
        remote="github" />

</manifest>
